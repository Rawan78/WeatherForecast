<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/favorite_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavoriteScreen.view.FavoritesScreenFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="add_location"
        android:src="@drawable/add_location"
        app:backgroundTint="@color/navyBlue"
        app:shapeAppearanceOverlay="@style/RoundedShapeAppearance" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_favorite_cities"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</FrameLayout>
